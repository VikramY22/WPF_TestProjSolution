<Window x:Class="CascadeDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Тест" Height="380" Width="400">
    <StackPanel Margin="15" VerticalAlignment="Top">

        <TextBlock Text="Город:" />
        <ComboBox x:Name="CityComboBox" SelectionChanged="City_SelectionChanged" />

        <TextBlock Text="Цех:" Margin="0,10,0,0" />
        <ComboBox x:Name="WorkshopComboBox" SelectionChanged="Workshop_SelectionChanged" IsEnabled="False" />

        <TextBlock Text="Сотрудник:" Margin="0,10,0,0" />
        <ComboBox x:Name="EmployeeComboBox" IsEnabled="False" />

        <TextBlock Text="Бригада:" Margin="0,10,0,0" />
        <ComboBox x:Name="BrigadeComboBox" />

        <TextBlock Text="Смена:" Margin="0,10,0,0" />
        <TextBox x:Name="ShiftTextBox" />

    </StackPanel>
</Window>
