<Window x:Class="WPF_TestProj.Views.AddEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить сотрудника" Height="380" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Город:"/>
        <ComboBox x:Name="CityComboBox" IsEditable="True"/>

        <TextBlock Text="Цех:" Margin="0,10,0,0"/>
        <ComboBox x:Name="WorkshopComboBox" IsEditable="True"/>

        <TextBlock Text="Сотрудник:" Margin="0,10,0,0"/>
        <TextBox x:Name="EmployeeTextBox"/>

        <TextBlock Text="Бригада:" Margin="0,10,0,0"/>
        <ComboBox x:Name="BrigadeComboBox" IsEditable="True"/>

        <Button Content="Сохранить"
                Margin="0,20,0,0"
                Click="SaveButton_Click"/>
    </StackPanel>
</Window>